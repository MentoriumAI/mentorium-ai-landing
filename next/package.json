{
  "name": "mentorium-landing-v2",
  "version": "2.0.0",
  "private": true,
  "description": "Modern landing page for Mentorium.ai built with Next.js, Tailwind CSS, and TypeScript",
  "author": "Mentorium",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start -p ${PORT:-8080}",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "build:production": "npm run lint && npm run type-check && npm run build"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.4.7"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.4.7",
    "@eslint/eslintrc": "^3"
  }
}
